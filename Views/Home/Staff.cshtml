@model List<GTX.Models.Employer>
@{
    Html.RenderPartial("_PageTitle");
}
<!-- Modal -->
<div id="message" class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="header" class="modal-header shadow">
                <h5 id="title" class="modal-title test-shadow">Contact</h5>
            </div>
            <div id="messageBody" class="modal-body well">
            </div>
        </div>
    </div>
</div>

<section class="container-fluid d-flex justify-content-center">
    <div class="row col-lg-8 p-3">
        @foreach (var employer in Model) {
            <div class="card well shadow">
                <div class="team__item">
                    <div class="team__item__pic">
                        <img class="rounded-2 shadow" src="@Url.Content($"~/img/staff/{employer.id}.jpg")" alt="...">
                    </div>
                    <div class="team__item__text">
                        <h5>@employer.Name</h5>
                        <div>@employer.Position</div>
                        <button class="btn btn-secondary shadow mt-2" onClick="showEmail('@employer.Name', '@employer.Email')">Contact</button>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<script type="text/javascript">
    $(function () {
    })

    function showEmail(name, email) {
        var name = "Contact: " + (name).innerText;
        var jqxhr = $.get(`${root}Home/ContactForm/`)
            .done(function (result) {
                $("#SendTo").val(email);
                $("#messageBody").html(result);
                $("#title").html(name);
                $("#message").modal("show");
            })
            .fail(function () {
            })
            .always(function () {
            })
    }
</script>
