@model GTX.Models.ContactModel
@{
    Html.RenderPartial("_PageTitle");
}

<div class="container-fluid d-flex justify-content-center">
    <div class="well row mt-1 p-3 rounded shadow d-flex justify-content-evenly">
        @foreach (var open in Model.OpenHours) {
            <div class="col-1">
                <button type="button" class="btn btn-outline-secondary bg-gradient shadow position-relative">
                    @open.Description
                    <span class="position-absolute top-0 start-100 translate-middle shadow badge bg-secondary bg-gradient">
                        @open.Day
                    </span>
                </button>
            </div>
        }
    </div>
</div>

<div class="container-fluid d-flex justify-content-center">
    <div class="well row mt-3 p-3 rounded shadow">
        <div class="col-lg-6">
            <img class="w-50 rounded-2 shadow" src="@Url.Content("~/GTXImages/gtx.jpg")">
            <h3 class="card-title mt-3">Firfield Showroom</h3>
            <p class="card-text">
                9516 PRINCETON GLENDALE RD, West Chester, OH 45011<br/>
                (513) 912-4574
            </p>
        </div>
        <div class="col-lg-6">
            @{ Html.RenderPartial("_ContactForm", Model.Contact); }
        </div>
    </div>
</div>

<script>
    (function () {
        $("#btnClose").hide();
    })()
</script>
