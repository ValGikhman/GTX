﻿@model GTX.Models.ContactModel

<style>
    .showroom-photo {
        object-fit: cover;
        width: 50%;
    }

    .card:hover {
        transform: none;
    }

</style>

<div class="container-fluid mt-3 d-flex justify-content-center">
    <div class="container">
        <!-- Stretch columns so their cards can match heights -->
        <div class="row g-4 justify-content-center">
            <!-- Showroom / Address -->
            <div class="col-12 col-md-6 col-xl-5 d-flex">
                <div class="card shadow-sm text-center well flex-fill h-100">
                    <div class="card-header gradient border-0">
                        <h5 class="mb-0"><i class="bi bi-geo-alt"></i> GTX Auto Group Showroom</h5>
                    </div>

                    <!-- Make body flex so buttons can sit at bottom with mt-auto -->
                    <div class="card-body d-flex flex-column">
                        <img class="img-fluid rounded-2 mb-3 showroom-photo d-block mx-auto"
                             src="@Url.Content("~/GTXImages/gtx.jpg")"
                             alt="GTX Auto Group showroom">

                        <address class="mb-3 small lh-base">
                            <strong class="text-uppercase d-block text-shadow">
                                9516 Princeton Glendale Rd<br />
                                West Chester Twp, OH 45011
                            </strong>
                        </address>

                        <!-- Push the actions to the bottom for consistent spacing -->
                        <div class="vstack gap-2 mt-auto">
                            <a class="btn gradient border-dark  rounded-5 shadow" target="_blank" rel="noopener" href="https://www.google.com/maps/search/?api=1&query=9516+Princeton+Glendale+Rd%2C+West+Chester%2C+OH+45011">
                                <i class="bi bi-map"></i> Get Directions
                            </a>
                            <a class="btn gradient border-dark rounded-5 shadow" href="tel:+15139124574">
                                <i class="bi bi-telephone"></i> (513) 489-2886
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-12 col-md-6 col-xl-5 d-flex">
                <div class="card shadow-sm text-center well flex-fill h-100">
                    <div class="card-header gradient border-0 text-center">
                        <h5 class="mb-0">
                            <i class="bi bi-envelope-paper"></i> Contact Us
                        </h5>
                    </div>

                    <div class="card-body d-flex flex-column" style="margin-top: -2rem;">
                        @{ Html.RenderPartial("_ContactForm", Model); }
                        <!-- If your form is short, add a tiny spacer so headers align nicely -->
                        <div class="mt-auto"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
