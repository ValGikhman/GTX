
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login Required";

    // 1) Prefer what the attribute sent
    var returnUrl = ViewBag.ReturnUrl as string;

    // 2) Fallback: querystring ?returnUrl=...
    if (string.IsNullOrWhiteSpace(returnUrl))
    {
        returnUrl = Request.QueryString["returnUrl"];
    }

    // 3) Final fallback: current page
    if (string.IsNullOrWhiteSpace(returnUrl))
    {
        returnUrl = Request?.Url?.PathAndQuery ?? "/";
    }
}

<input type="hidden" id="returnUrl" value="@returnUrl" />

<div class="gtx-auth-wrap py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-6 col-xl-6">

            <div class="gtx-auth-card shadow-lg rounded-4 overflow-hidden border-0">
                <div class="card-header bg-white border-0 p-4">
                    <div class="d-flex align-items-start justify-content-between gap-3 flex-wrap">
                        <div class="d-flex align-items-center gap-3">
                            <div class="gtx-auth-icon rounded-4 d-flex align-items-center justify-content-center shadow-sm">
                                <i class="bi bi-shield-lock fs-3"></i>
                            </div>
                            <div>
                                <h3 class="mb-1 fw-semibold">Login required</h3>
                                <div class="text-muted small">
                                    This area requires the <span class="fw-semibold">User</span> role.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="gtx-shimmer"></div>

                <div class="card-body p-4 p-md-5">
                    <div class="alert alert-light border rounded-4 shadow-sm mb-4">
                        <div class="d-flex gap-3">
                            <div class="rounded-4 d-flex align-items-center justify-content-center border bg-white shadow-sm"
                                 style="width:44px;height:44px;">
                                <i class="bi bi-info-circle fs-4"></i>
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center justify-content-between gap-3 flex-wrap">
                                    <!-- Left text -->
                                    <div class="min-w-0">
                                        <div class="fw-semibold mb-0">You’re almost there.</div>
                                        <div class="text-muted small mb-0 text-truncate">
                                            Your current role doesn’t have access to this page. <span class="fw-semibold">Log in</span> to continue.
                                        </div>
                                    </div>

                                    <!-- Right button -->
                                    <div class="flex-shrink-0">
                                        <a class="btn gradient shadow border-dark rounded-4"
                                           href="#"
                                           title="Log in"
                                           data-bs-toggle="modal"
                                           data-login-modal="true">
                                            <i class="bi bi-person-circle px-1 role-icon"></i>
                                            <span class="role-text text-shadow-small fw-bold"></span>
                                        </a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="row g-3">
                        <div class="col-12">
                            <div class="p-3 rounded-4 border bg-white shadow-sm h-100">
                                <div class="fw-semibold mb-1"><i class="bi bi-shield-check me-1"></i> Secure access</div>
                                <div class="text-muted small mb-0">
                                    We only allow authorized roles into this section.
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
