<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>GTX Autogroup</title>

    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/scripts/bootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/gijgo/1.9.14/combined/css/gijgo.min.css" rel="stylesheet" type="text/css" />
</head>

<script type="text/javascript">
    var root = "@Url.Content("~/")";
    var images = "@Url.Content("~/GTXImages")";
</script>

<body>
    <!-- Offcanvas Menu Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        <div class="offcanvas__logo">
            <a href="./">
                <img src="@Url.Content("~/GTXImages/gtx.png")" alt="www.gtxautogroup.com">
            </a>
        </div>
        <div id="mobile-menu-wrap"></div>
    </div>
    <header class="header fixed-top">
        <div class="container-fluid set-bg" data-setbg="@Url.Content("~/img/gradient-dark-2.jpg")">
            <div class="row">
                <div class="canvas__open bg-dark">
                    <span class="bi bi-justify"></span>
                </div>
                <nav class="header__top header__menu">
                    <ul class="main-menu">
                        <li>@Html.ActionLink("Inventory", "Inventory", "Majordome")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <!-- Header Section End -->
    <div>
        @RenderBody()
    </div>
    <!-- Footer Section Begin -->
    <footer class="set-bg fixed-bottom" data-setbg="@Url.Content("~/img/gradient-dark-2.jpg")">
    </footer>
    <!-- Footer Section End -->

    @Scripts.Render("~/scripts/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gijgo/1.9.14/combined/js/gijgo.min.js" type="text/javascript"></script>
