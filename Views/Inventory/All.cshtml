@{
    @model GTX.Models.GTXInventory
    Html.RenderPartial("_PageTitle");
}

<div class="row container-fluid centered">
    @foreach (var vehicle in Model.Vehicles) {
    <div class="card well p-3 rounded-3">
        <div class="card-header shadow">
            <h5>
                @vehicle.Year
                @vehicle.Make
            </h5>
            <h7>@vehicle.Model</h7>
        </div>
        <a class="btn btn-outline-light shadow">
            <img class="rounded-bottom-3" width="480" height="200" src="https://cdn05.carsforsale.com/570bf417ac34166c212b83c915204f92/480x360/2012-acura-tl-sh-awd-w-tech-4dr-sedan-6a-w-technology-package.jpg">
        </a>
        <div class="card-header well shadow">
            <h7>
                <span class="pull-left">Miles: @vehicle.Mileage.ToString("N0")</span>
                <span class="pull-right">Yours for: @vehicle.RetailPrice.ToString("C0")</span>
            </h7>
        </div>
        <button class="btn btn-secondary shadow">Details</button>
    </div>
    }
</div>


