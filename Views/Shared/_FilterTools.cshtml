        @* Cylinders *@
        <div class="col" title="Click on dropdown and type to search for Cylinders.">
            <div class="filter-card p-1 p-md-2 shadow">
                <div class="d-flex align-items-start justify-content-between mb-2">
                    <h6 class="filter-title">
                        <i class="bi bi-speedometer"></i>Cylinders
                    </h6>
                    <div class="form-check form-switch">
                        @Html.CheckBox("allCylinders", true, new { @class = "form-check-input", id = "allCylinders" })
                        @Html.Label("AllCylinders", "All", new { @class = "form-check-label fw-semibold", @for = "allCylinders" })
                    </div>
