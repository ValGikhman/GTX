        </div>

        @* Transmission *@
        <div class="col" title="Click on dropdown and type to search for Transmissions.">
            <div class="filter-card p-1 p-md-2 shadow">
                <div class="d-flex align-items-start justify-content-between mb-2">
                    <h6 class="filter-title">
                        <i class="bi bi-shuffle"></i>Transm
                    </h6>
                    <div class="form-check form-switch">
                        @Html.CheckBox("allTransmissions", true, new { @class = "form-check-input", id = "allTransmissions" })
                        @Html.Label("AllTransmissions", "All", new { @class = "form-check-label fw-semibold", @for = "allTransmissions" })
                    </div>
                </div>
                <select multiple class="chosen-select" id="transmissions" tabindex="6"></select>
            </div>
        </div>

        @* Fuel *@
        <div class="col" title="Click on dropdown and type to search for Fuel types.">
            <div class="filter-card p-1 p-md-2 shadow">
                <div class="d-flex align-items-start justify-content-between mb-2">
                    <h6 class="filter-title">
                        <i class="bi bi-fuel-pump"></i>Fuel
                    </h6>
                    <div class="form-check form-switch">
                        @Html.CheckBox("allFuelTypes", true, new { @class = "form-check-input", id = "allFuelTypes" })
                        @Html.Label("AllFuelTypes", "All", new { @class = "form-check-label fw-semibold", @for = "allFuelTypes" })
                    </div>
                </div>
                <select multiple class="chosen-select" id="fuelTypes" tabindex="7"></select>
            </div>
        </div>

        @* Vehicle Type *@
        <div class="col" title="Click on dropdown and type to search for Vehicle types.">
            <div class="filter-card p-1 p-md-2 shadow">
                <div class="d-flex align-items-start justify-content-between mb-2">
                    <h6 class="filter-title">
                        <i class="bi bi-car-front-fill"></i>Type
                    </h6>
                    <div class="form-check form-switch">
                        @Html.CheckBox("allVehicleTypes", true, new { @class = "form-check-input", id = "allVehicleTypes" })
                        @Html.Label("allVehicleTypes", "All", new { @class = "form-check-label fw-semibold", @for = "allVehicleTypes" })
                    </div>
                </div>
                <select multiple class="chosen-select" id="vehicleTypes" tabindex="8"></select>
            </div>
        </div>

    </div>

    @* ===== Sliders ===== *@
    <div class="row g-1 mt-2">
        <div class="col-12 col-lg-6">
            <div class="slider-card p-1 p-md-2 shadow">
                <div class="slider-head mb-3">
                    <label class="form-label" for="price">
                        <i class="bi bi-currency-dollar"></i> Price range
                    </label>
                    <span class="badge text-bg-light border">
                        <i class="bi bi-tag me-1"></i>Range
                    </span>
                </div>

                <div id="price" class="mx-2 slider"></div>

                <div class="slider-meta small text-secondary">
                    <span id="priceMin" class="fw-semibold"></span>
                    <span id="priceMax" class="fw-semibold"></span>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="slider-card p-1 p-md-2 shadow">
                <div class="slider-head mb-3">
                    <label class="form-label" for="milege">
                        <i class="bi bi-speedometer2"></i> Mileage
                    </label>
                    <span class="badge text-bg-light border">
                        <i class="bi bi-road me-1"></i>Miles
