        </div>

        @* Vehicle Type *@
        <div class="col" title="Click on dropdown and type to search for Vehicle types.">
            <div class="filter-card p-1 p-md-2 shadow">
                <div class="d-flex align-items-start justify-content-between mb-2">
                    <h6 class="filter-title">
                        <i class="bi bi-car-front-fill"></i>Type
                    </h6>
                    <div class="form-check form-switch">
                        @Html.CheckBox("allVehicleTypes", true, new { @class = "form-check-input", id = "allVehicleTypes" })
                        @Html.Label("allVehicleTypes", "All", new { @class = "form-check-label fw-semibold", @for = "allVehicleTypes" })
                    </div>
                </div>
                <select multiple class="chosen-select" id="vehicleTypes" tabindex="8"></select>
            </div>
        </div>

    </div>

    @* ===== New Sliders ===== *@
    <div class="row g-1 mt-2">
        <div class="col-12 col-lg-6">
            <div class="slider-card p-1 p-md-2 shadow">
                <div class="slider-head mb-3 d-flex align-items-center justify-content-between">
                    <h6 class="filter-title">
                        <i class="bi bi-currency-dollar"></i> Price range
                    </h6>
                    <span class="badge text-bg-light border">
                        <i class="bi bi-tag me-1"></i>Range
                    </span>
                </div>

                <!-- noUiSlider target -->
                <div id="priceSlider" class="mx-2"></div>
                <input type="hidden" id="minPrice">
                <input type="hidden" id="maxPrice">

                <div class="slider-meta small text-secondary d-flex justify-content-between mt-2">
                    <span id="priceMin" class="fw-semibold"></span>
                    <span id="priceMax" class="fw-semibold"></span>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="slider-card p-1 p-md-2 shadow">
                <div class="slider-head mb-3 d-flex align-items-center justify-content-between">
                    <h6 class="filter-title">
                        <i class="bi bi-speedometer2"></i> Mileage
                    </h6>
                    <span class="badge text-bg-light border">
                        <i class="bi bi-road me-1"></i>Miles
                    </span>
                </div>

                <!-- noUiSlider target -->
                <div id="milegeSlider" class="mx-2"></div>
                <input type="hidden" id="minMiles">
                <input type="hidden" id="maxMiles">
                <div class="slider-meta small text-secondary d-flex justify-content-between mt-2">
                    <span id="milegeMin" class="fw-semibold"></span>
                    <span id="milegeMax" class="fw-semibold"></span>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    // ==========================================================
    // Create sliders ONCE on load, then update their ranges later
    // Call: setPriceRange(min,max) / setMilesRange(min,max)
    // ==========================================================
    $(function () {
        // expose setters globally so your ajax functions can call them
        window.setPriceRange = function (rawMin, rawMax) {
            var $priceSlider = $("#priceSlider");
            if (!$priceSlider.length || !$priceSlider[0].noUiSlider) return;

            var min = roundDownTo(rawMin, 1000);
            var max = roundUpTo(rawMax, 1000);

            // update allowed bounds
            $priceSlider[0].noUiSlider.updateOptions({ range: { min: min, max: max } }, false);

            // reset handles to the full available range (or change this to preserve selection)
            $priceSlider[0].noUiSlider.set([min, max]);
        };

        window.setMilesRange = function (rawMin, rawMax) {
            var $milegeSlider = $("#milegeSlider");
            if (!$milegeSlider.length || !$milegeSlider[0].noUiSlider) return;

            var min = roundDownTo(rawMin, 1000);
            var max = roundUpTo(rawMax, 1000);

            $milegeSlider[0].noUiSlider.updateOptions({ range: { min: min, max: max } }, false);
            $milegeSlider[0].noUiSlider.set([min, max]);
        };

        // =========================
        // PRICE (range) - create once
        // =========================
        var $priceSlider = $("#priceSlider");
        var $priceMin = $("#priceMin");
        var $priceMax = $("#priceMax");

        if ($priceSlider.length) {

            // Create ONLY if not already created (supports partial reloads)
            if (!$priceSlider[0].noUiSlider) {
                noUiSlider.create($priceSlider[0], {
                    start: [0, 0],
                    connect: true,
                    step: 1, // we round to 1000 ourselves
                    range: { min: 0, max: 0 }
                });

                $priceSlider[0].noUiSlider.on("update", function (values) {
                    var minVal = roundTo(toNum(values[0]), 1000);
                    var maxVal = roundTo(toNum(values[1]), 1000);

                    $("#minPrice").val(minVal);
                    $("#maxPrice").val(maxVal);

                    $priceMin.text("More than " + usd.format(minVal));
                    $priceMax.text("Under " + usd.format(maxVal));
                });

                $priceSlider[0].noUiSlider.on("change", function (values) {
                    var minVal = roundTo(toNum(values[0]), 1000);
                    var maxVal = roundTo(toNum(values[1]), 1000);
                    $priceSlider[0].noUiSlider.set([minVal, maxVal]);
                });
            }
        }

        // =========================
        // MILEAGE (range) - create once
        // =========================
        var $milegeSlider = $("#milegeSlider");
        var $milegeMin = $("#milegeMin");
        var $milegeMax = $("#milegeMax");

        if ($milegeSlider.length) {

            if (!$milegeSlider[0].noUiSlider) {
                noUiSlider.create($milegeSlider[0], {
                    start: [0, 0],
                    connect: true,
                    step: 1, // we round to 1000 ourselves
                    range: { min: 0, max: 0 }
                });

                $milegeSlider[0].noUiSlider.on("update", function (values) {
                    var minVal = roundTo(toNum(values[0]), 1000);
                    var maxVal = roundTo(toNum(values[1]), 1000);

                    $("#minMiles").val(minVal);
                    $("#maxMiles").val(maxVal);

                    $milegeMin.text("More than " + minVal.toLocaleString() + " mi");
                    $milegeMax.text("Under " + maxVal.toLocaleString() + " mi");
                });

                $milegeSlider[0].noUiSlider.on("change", function (values) {
                    var minVal = roundTo(toNum(values[0]), 1000);
                    var maxVal = roundTo(toNum(values[1]), 1000);
                    $milegeSlider[0].noUiSlider.set([minVal, maxVal]);
                });
            }
        }
    });
</script>
