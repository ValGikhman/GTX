                        @Html.Label("AllDrives", "All", new { @class = "form-check-label fw-semibold", @for = "allDrives" })
                    </div>
                </div>
                <select multiple class="chosen-select" id="drives" tabindex="3"></select>
            </div>
        </div>

        @* Body *@
