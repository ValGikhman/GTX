@* ===== FULL COPY/PASTE VIEW (Bootstrap + Chosen + jQuery UI sliders) ===== *@
<style>
    /* ===== Filters layout ===== */
    .filter-card {
        border: 1px solid rgba(0,0,0,.075);
        border-radius: 1rem;
        background: #fff;
        height: 100%;
    }

    .filter-title {
        font-weight: 800;
        font-size: .95rem;
        letter-spacing: .2px;
        display: flex;
        align-items: center;
        gap: .5rem;
        line-height: 1.1;
        margin: 0;
    }

        .filter-title i {
            font-size: 1.05rem;
            opacity: .85;
        }

    .filter-card .form-switch {
        display: flex;
        align-items: center;
        gap: .5rem;
        margin: 0;
    }

        .filter-card .form-switch .form-check-input {
            width: 2.5rem;
            height: 1.25rem;
            margin: 0;
            cursor: pointer;
        }

        .filter-card .form-switch .form-check-label {
            cursor: pointer;
            user-select: none;
        }

    /* Make selects full width */
    .filter-card select {
        width: 100% !important;
    }

    /* ===== Chosen (make it responsive + Bootstrap-ish) ===== */
    .chosen-container {
        width: 100% !important;
    }

        .chosen-container .chosen-choices {
            border-radius: .75rem;
            border: 1px solid rgba(0,0,0,.15);
            padding: .25rem .5rem;
            box-shadow: none;
            background: #fff;
        }

    .chosen-container-active .chosen-choices {
        border-color: rgba(13,110,253,.5);
        box-shadow: 0 0 0 .25rem rgba(13,110,253,.15);
    }

    .chosen-container .chosen-drop {
        z-index: 10 !important;
        border-radius: .75rem;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,.15);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.12);
    }

    .chosen-container-multi .chosen-choices li.search-field input[type="text"] {
        height: 22px;
    }

    /* ===== Sliders ===== */
    /* Nice grey gradient for the selected (connected) range */
    .noUi-connect {
        background: gray;
    }

    /* Optional: make the base track look clean too */
    .noUi-target {
        background: #e9ecef;
        border: 1px solid rgba(0,0,0,.08);
        border-radius: 999px;
        box-shadow: inset 0 1px 2px rgba(0,0,0,.06);
    }

    .noUi-handle {
        width: 22px !important;
        height: 22px !important;
        top: -8px !important;
        right: -10px !important;
        border-radius: 999px;
        border: 1px solid rgba(0,0,0,.15);
        background: linear-gradient(180deg, #ffffff 0%, #e9ecef 100%);
        box-shadow: 0 2px 6px rgba(0,0,0,.18);
    }

    .noUi-horizontal {
        height: 10px;
    }

    .noUi-handle:before,
    .noUi-handle:after {
        display: none; /* removes the little bars inside the handle */
    }

    .slider-card {
        background: #fff;
        border: 1px solid rgba(0,0,0,.075);
        border-radius: 1rem;
        display: flex;
        flex-direction: column;
    }

    .slider-head {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: .75rem;
        margin-bottom: .5rem;
    }

        .slider-head .form-label {
            margin: 0;
            display: flex;
            align-items: center;
            gap: .5rem;
            line-height: 1.1;
            font-weight: 800;
        }

            .slider-head .form-label i {
                font-size: 1.05rem;
                opacity: .85;
            }

        #price .ui-slider-range,
        #milege .ui-slider-range {
            height: 10px;
            border-radius: 999px;
        }

    .slider-meta {
        margin-top: auto;
        display: flex;
        justify-content: space-between;
        gap: .75rem;
        padding-top: .75rem;
        border-top: 1px dashed rgba(0,0,0,.12);
        white-space: nowrap; /* prevents wrap = mismatched card height */
    }
</style>

<div class="container-fluid p-0 m-0">
    @* ===== Top filters grid ===== *@
    <div class="row g-1 row-cols-2 row-cols-md-3 row-cols-lg-4 mt-1">
        @* Makes *@
        <div class="col" title="Click on dropdown and type to search for Makes.">
            <div class="filter-card p-1 p-md-2 shadow">
                <div class="d-flex align-items-start justify-content-between mb-2">
                    <h6 class="filter-title">
                        <i class="bi bi-building"></i> Makes
                    </h6>
                    <div class="form-check form-switch">
                        @Html.CheckBox("allMakes", true, new { @class = "form-check-input", id = "allMakes" })
                        @Html.Label("AllMakes", "All", new { @class = "form-check-label fw-semibold", @for = "allMakes" })
