                        @Html.Label("AllDrives", "All", new { @class = "form-check-label fw-semibold", @for = "allDrives" })
                    </div>
                </div>
                <select multiple class="chosen-select" id="drives" tabindex="3"></select>
            </div>
        </div>

        @* Body *@
        <div class="col" title="Click on dropdown and type to search for Body types.">
            <div class="filter-card p-1 p-md-2 shadow">
                <div class="d-flex align-items-start justify-content-between mb-2">
                    <h6 class="filter-title">
                        <i class="bi bi-truck-front"></i>Body
                    </h6>
                    <div class="form-check form-switch">
                        @Html.CheckBox("allBodyTypes", true, new { @class = "form-check-input", id = "allBodyTypes", disabled = "true" })
                        @Html.Label("AllBodyTypes", "All", new { @class = "form-check-label fw-semibold", @for = "allBodyTypes" })
                    </div>
