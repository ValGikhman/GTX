<div id="filterByTerm" class="d-flex align-items-center position-relative w-100 mt-1 pb-4">
    <!-- Centered search -->
    <div class="position-absolute start-50 translate-middle-x w-100 d-flex justify-content-center mt-3">
        <div id="filterWrapper" class="input-group shadow rounded-4" style="max-width: 350px;">
            <!-- Search box -->
            <input type="search" id="filterTerm" class="form-control rounded-start-4 rounded-end-4" placeholder="Search within results..." aria-label="Search inventory">

            <!-- Help -->
            <button class="filterHelp input-group-text btn btn-gradient-grey border-start-0 rounded-0 border-dark-subtle" data-bs-toggle="modal" data-bs-target="#searchHelpModal">
                <i id="filterHelp" class="bi-question-circle" title="Help" style="cursor:pointer;"></i>
            </button>

            <!-- Like -->
            <button class="filterLiked input-group-text btn btn-gradient-grey border-start-0 rounded-0 border-dark-subtle" style="margin-left:-3px;">
                <i id="filterLiked" class="bi bi-heart text-danger" title="Show liked" style="cursor:pointer;"></i>
            </button>

            <!-- Last Seen -->
            <button class="filterLast input-group-text btn btn-gradient-grey border-start-0 rounded-end-4 border-dark-subtle" style="margin-left:-4px;">
                <i id="filterLast" class="bi bi-journal text-primary" title="10 last seen cars" style="cursor:pointer;"></i>
            </button>
        </div>
    </div>

    <!-- Filter results (absolute center, one row below) -->
    <div class="position-absolute start-50 translate-middle-x text-center" style="top: 50px;">
        <h8 id="filterResults" class="m-0"></h8>
    </div>

    <!-- RIGHT: Sort (pushed right with ms-auto) -->
    <div class="sort d-none d-xl-inline ms-auto d-flex align-items-center gap-2 z-3 mt-3">
        <label for="sortField" class="fw-bold mb-0">Sort By:</label>
        <select id="sortField" class="form-select d-inline-block w-auto">
            <option value="make">Make</option>
            <option value="year">Year</option>
            <option value="miles">Miles</option>
            <option value="price">Price</option>
        </select>

        <span class="form-check form-check-inline mx-1">
            <input class="form-check-input me-2" type="checkbox" id="sortDirection">
            <label class="fw-bold mb-0" for="sortDirection">Desc</label>
        </span>
    </div>
</div>
<div class="modal fade" id="searchHelpModal" tabindex="-1" aria-labelledby="searchHelpModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5>
                    <span class="bg-light d-flex align-items-center gap-2">
                        <i class="bi bi-question-circle-fill text-primary fs-5 text-white"></i>
                        <span class="text-white">Available search tokens</span>
                    </span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                @Html.Partial("_SearchHelp")
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">@I18n.R("All_Close")</button>
            </div>
        </div>
    </div>
</div>

