@model GTX.Models.AnnouncementModel
@functions {
    private string GetBootstrapAlertClass(GTX.Models.AnnouncementType type)
    {
        switch (type)
        {
            case GTX.Models.AnnouncementType.Success: return "success";
            case GTX.Models.AnnouncementType.Warning: return "warning";
            case GTX.Models.AnnouncementType.Danger: return "danger";
            case GTX.Models.AnnouncementType.Promo: return "primary";
            default: return "info";
        }
    }

    private string GetIcon(GTX.Models.AnnouncementType type)
    {
        switch (type)
        {
            case GTX.Models.AnnouncementType.Success: return "bi-check-circle-fill";
            case GTX.Models.AnnouncementType.Warning: return "bi-exclamation-triangle-fill";
            case GTX.Models.AnnouncementType.Danger: return "bi-x-octagon-fill";
            case GTX.Models.AnnouncementType.Promo: return "bi-megaphone-fill";
            default: return "bi-info-circle-fill";
        }
    }
}

@{
    var cls = GetBootstrapAlertClass(Model.Type);   // info/success/warning/danger/primary
    var icon = GetIcon(Model.Type);
}

<style>
    /* =========================
       GTX Announcement (scoped)
       ========================= */
    .gtx-announcement {
        border: 1px solid rgba(0,0,0,.08);
        overflow: hidden;
        position: relative;
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
    }

        /* soft glass layer */
        .gtx-announcement::before {
            content: "";
            position: absolute;
            inset: 0;
            opacity: .95;
            pointer-events: none;
            background: linear-gradient(180deg, rgba(255,255,255,.88), rgba(255,255,255,.55));
        }

        /* type glow */
        .gtx-announcement.gtx-type-info::after,
        .gtx-announcement.gtx-type-success::after,
        .gtx-announcement.gtx-type-warning::after,
        .gtx-announcement.gtx-type-danger::after,
        .gtx-announcement.gtx-type-primary::after {
            content: "";
            position: absolute;
            inset: -2px;
            pointer-events: none;
            filter: blur(18px);
            opacity: .45;
        }

        .gtx-announcement.gtx-type-info::after {
            background: radial-gradient(circle at 20% 10%, rgba(13,110,253,.55), transparent 55%), radial-gradient(circle at 80% 30%, rgba(13,202,240,.45), transparent 55%);
        }

        .gtx-announcement.gtx-type-success::after {
            background: radial-gradient(circle at 20% 10%, rgba(25,135,84,.55), transparent 55%), radial-gradient(circle at 80% 30%, rgba(45,212,191,.40), transparent 55%);
        }

        .gtx-announcement.gtx-type-warning::after {
            background: radial-gradient(circle at 20% 10%, rgba(255,193,7,.60), transparent 55%), radial-gradient(circle at 80% 30%, rgba(255,153,0,.40), transparent 55%);
        }

        .gtx-announcement.gtx-type-danger::after {
            background: radial-gradient(circle at 20% 10%, rgba(220,53,69,.60), transparent 55%), radial-gradient(circle at 80% 30%, rgba(255,99,132,.35), transparent 55%);
        }

        .gtx-announcement.gtx-type-primary::after {
            background: radial-gradient(circle at 20% 10%, rgba(13,110,253,.60), transparent 55%), radial-gradient(circle at 80% 30%, rgba(111,66,193,.40), transparent 55%);
        }

        /* keep content above layers */
        .gtx-announcement > * {
            position: relative;
            z-index: 1;
        }

        /* Quill-generated content polish (scoped) */
        .gtx-announcement .gtx-announcement-body img {
            max-width: 100%;
            height: auto;
            display: block;
            margin: .75rem auto;
            border-radius: 1rem;
            border: 1px solid rgba(0,0,0,.12);
            padding: .35rem;
            background: rgba(255,255,255,.85);
            box-shadow: 0 .75rem 1.5rem rgba(0,0,0,.12);
        }

        .gtx-announcement .gtx-announcement-body p {
            margin-bottom: .6rem;
        }
</style>

<div class="alert alert-@cls alert-dismissible fade show shadow-lg rounded-5 mb-0 w-100 text-center opacity-95 gtx-announcement gtx-type-@cls" role="alert">
    <!-- top-right close -->
    <button type="button" class="btn-close" aria-label="Close" data-bs-dismiss="alert"></button>

    <!-- Header -->
    <div class="d-flex flex-column align-items-center gap-2 pt-2">
        <div class="d-inline-flex align-items-center gap-2 px-3 py-2 rounded-pill border shadow-sm bg-white">
            <i class="bi @icon fs-5"></i>
            <span class="fw-semibold text-uppercase small" style="letter-spacing:.08em;">GTX Announcement</span>
        </div>

        <div class="display-6 fw-bold lh-1 mb-1">
            @Model.Title
        </div>
    </div>

    <!-- Body -->
    <div class="mt-3">
        <div class="mx-auto gtx-announcement-body" style="max-width: 860px;">
            @Html.Raw(Model.MessageHtml)
        </div>
    </div>

    <!-- Footer -->
    <div class="mt-3 pt-3 border-top border-dark border-opacity-10">
        <div class="d-flex flex-column flex-md-row align-items-center justify-content-center gap-2 text-muted small">
            <span class="badge rounded-pill bg-light text-dark border shadow-sm px-3 py-2">
                <i class="bi bi-calendar3 me-1"></i>
                @Model.DateStart.ToString("MMM dd, yyyy") – @Model.DateEnd.ToString("MMM dd, yyyy")
            </span>
        </div>

        <div class="d-flex flex-wrap justify-content-center gap-2 mt-3">
            <a href="~/Inventory/All" class="btn btn-dark rounded-pill px-4 shadow-sm">
                <i class="bi bi-search me-2"></i>@I18n.R("All_SearchInventory")
            </a>

            <button type="button" class="btn btn-outline-dark rounded-pill px-4 shadow-sm" data-bs-dismiss="alert">
                <i class="bi bi-x-lg me-2"></i>@I18n.R("All_Close")
            </button>
        </div>
    </div>
</div>
