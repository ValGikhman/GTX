@model GTX.Models.AnnouncementModel
@functions {
    private string GetBootstrapAlertClass(GTX.Models.AnnouncementType type)
    {
        switch (type)
        {
            case GTX.Models.AnnouncementType.Success: return "success";
            case GTX.Models.AnnouncementType.Warning: return "warning";
            case GTX.Models.AnnouncementType.Danger: return "danger";
            case GTX.Models.AnnouncementType.Promo: return "primary";
            default: return "info";
        }
    }
}

@{
    var cls = GetBootstrapAlertClass(Model.Type);
}

<div class="alert alert-@cls alert-dismissible fade show shadow rounded-4 mb-0 position-relative w-100 opacity-75 text-center" role="alert">
    <button type="button" class="btn btn-close" aria-label="Close" data-bs-dismiss="alert"></button>

    <div class="d-flex flex-column align-items-center justify-content-center gap-2 mb-2">
        <div class="fw-semibold">@Model.Title</div>
    </div>

    <div class="d-flex justify-content-center">
        <div class="text-center">
            @Html.Raw(Model.MessageHtml)
        </div>
    </div>

    <div class="small text-muted mt-2 text-center">
        Dates: @Model.DateStart.ToString("yyyy-MM-dd") → @Model.DateEnd.ToString("yyyy-MM-dd")
    </div>
</div>
