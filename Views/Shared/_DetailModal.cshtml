@model GTX.Models.GTX
<div class="modal-header">
    <h5 class="modal-title" id="detailsTitle">
        @Model?.Year @Model?.Make - @Model?.Model
    </h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="container-fluid justify-content-evenly">
        <div class="row p-1">
            <div class="col-md-6">
                <div class="p-3 well shadow-lg">Left Div</div>
            </div>
            <div class="col-md-6">
                <div class="p-3 well shadow-lg">Right Div</div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer mt-3">
    <button type="button" class="btn btn-close-white shadow" data-bs-dismiss="modal">
        <i class="bi bi-x-lg"></i>
        Close
    </button>
</div>
