<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>GTX Autogroup</title>

    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/scripts/modernizr")
    @Scripts.Render("~/scripts/bootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/Scripts/just- validate/just-validate.production.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.1/dist/js.cookie.min.js"></script>

    <script type="text/javascript">
        var root = "@Url.Content("~/")";
        var images = "@Url.Content("~/GTXImages")";
    </script>
    <script src="~/Scripts/inventory.js"></script>
</head>

<body>
    <!-- Offcanvas open hours -->
    <div class="offcanvas-top-fixed-center" tabindex="-1" id="openHours">
        <div class="offcanvas-header rounded-top">
        </div>
        <div class="offcanvas-body">
            @Html.Partial("_Schedule")
            <p id="offsetDisplay"></p>
        </div>
    </div>

    <!-- Offcanvas Menu Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper gradiant rounded-2 text-shadow">
        <div class="offcanvas__logo">
            <a href="./">
                <img width="100" src="@Url.Content("~/GTXImages/gtx.png")" alt="www.gtxautogroup.com">
            </a>
            <a class="btn btn-light my-2" id="click-area" href="tel:(513) 912-4574">
                <i class="bi bi-telephone"></i>
                (513) 912-4574
            </a>
        </div>
        <div id="mobile-menu-wrap">
            <i class="bi bi-stopwatch text-shadow">&nbsp;</i><h7 class="schedule"></h7>
            @Html.Partial("_ScheduleMobile")
        </div>
    </div>
    <!-- Offcanvas Menu End -->


    @{Html.RenderPartial("_SearchForm");}

    <!-- Header Section Begin -->
<header class="header fixed-top">
    <div class="canvas__open">
        <span class="bi bi-justify"></span>
    </div>
    <div class="container-fluid set-bg" data-setbg="@Url.Content("~/img/gradient-dark-2.jpg")">
        <div class="d-flex justify-content-between">
            <nav class="header__top header__menu">
                <ul class="main-menu">
                    <li>@Html.ActionLink("Home", "", "Home")</li>
                    <li>
                        <a href="#">Inevntory</a>
                        <ul class="dropdown rounded">
                            <li>@Html.ActionLink("All", "All", "Inventory")</li>
                            <li>@Html.ActionLink("Suvs", "Suvs", "Inventory")</li>
                            <li>@Html.ActionLink("Trucks", "Trucks", "Inventory")</li>
                            <li>@Html.ActionLink("Vans", "Vans", "Inventory")</li>
                            <li>@Html.ActionLink("Hatchbacks", "Hatchbacks", "Inventory")</li>
                            <li>@Html.ActionLink("Coupes", "Coupes", "Inventory")</li>
                            <li>@Html.ActionLink("Sedans", "Sedans", "Inventory")</li>
                            <li>@Html.ActionLink("Convertibles", "Convertibles", "Inventory")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Blog", "Blog", "Home")</li>
                    <li>
                        <a href="#">About us</a>
                        <ul class="dropdown rounded">
                            <li>@Html.ActionLink("Contact us", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Our staff", "Staff", "Home")</li>
                        </ul>
                    </li>
                    <li class="fake-input hand-pointer d-none d-lg-inline-block" data-bs-toggle="modal" data-bs-target="#filtersModal">
                        @{Html.RenderPartial("_SearchByTerm");}
                    </li>
                </ul>
            </nav>
            <nav class="header__top">
                <ul class="main-menu start-100 list-unstyled">
                    <li class="d-none d-xxl-inline">
                        <a class="btn btn-light" id="btnOpenHours" data-bs-toggle="offcanvas" data-bs-target="#openHours" aria-controls="openHours">
                            <i class="bi bi-stopwatch"></i>
                            <span class="schedule popoverable" data-bs-toggle="popover" data-bs-content="<span class='text-danger'><strong>Click to toggle open/close for hours and directions</strong></span>"></span>
                        </a>
                    </li>
                    <li class="d-sm-inline m-xl-1">
                        <a class="btn btn-light" id="click-area" href="tel:(513) 912-4574">
                            <i class="bi bi-telephone"></i>
                            (513) 912-4574
                        </a>
                    </li>
                    <li class="d-md-inline m-xl-1">
                        <a class="btn btn-light" href="https://www.facebook.com/GTXAutoGroup"><i class="fa fa-facebook"></i></a>
                    </li>
                    <li class="d-md-inline m-xl-1">
                        <a class="btn btn-light" href="https://www.twitter.com/GTXAutoGroup"><i class="fa fa-twitter"></i></a>
                    </li>
                </ul>
            </nav>
            <div class="header__top__social visually-hidden">
                <a href="https://www.facebook.com/GTXAutoGroup"><i class="fa fa-facebook"></i></a>
                <a href="https://www.twitter.com/GTXAutoGroup"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-google"></i></a>
                <a href="#"><i class="fa fa-instagram"></i></a>
            </div>
        </div>
    </div>

    @{ Html.RenderPartial("_CategoryFilter"); }
</header>
    <!-- Header Section End -->
    <div class="body-content">
        @RenderBody()
    </div>
    <!-- Footer Section Begin -->
    <footer class="set-bg fixed-bottom" data-setbg="@Url.Content("~/img/gradient-dark-2.jpg")">
        <div class="row">
            <div class="col-lg-12 text-white text-center">
                <a href="https://www.gtxagroup.com" target="_blank">
                    <i class="fa fa-clock-o"></i>
                    <h7>
                        <span>Copyright &copy; @DateTime.Now.Year All rights reserved | made by</span>
                        <span class="badge bg-info">GTX</span><span>&nbsp;@ViewBag.Environment</span>
                    </h7>
                </a>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->

    @Scripts.Render("~/scripts/jquery")
    @RenderSection("scripts", required: false)

</body>
</html>

<script>
    var cookieName = 'likedCars';
    var likedCars = [];
    loadLikedCars();
</script>
