<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>GTX Autogroup</title>

    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/scripts/modernizr")
    @Scripts.Render("~/scripts/bootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>

<script type="text/javascript">
    var root = "@Url.Content("~/")";
</script>

<body>
    <!-- Offcanvas Menu Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        <div class="offcanvas__logo">
            <a href="./">
                <img src="@Url.Content("~/img/gtx.png")" alt="www.gtxautogroup.com">
            </a>
        </div>
        <div id="mobile-menu-wrap"></div>
        <ul class="offcanvas__widget__add">
            <li><i class="fa fa-clock-o"></i> Week day: 08:00 am to 18:00 pm</li>
        </ul>
        <div class="offcanvas__phone__num">
            <i class="fa fa-phone"></i>
            <span>(513) 912-4574</span>
        </div>
        <div class="offcanvas__social">
            <a href="https://www.facebook.com/GTXAutoGroup"><i class="fa fa-facebook"></i></a>
            <a href="https://www.twitter.com/GTXAutoGroup"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-google"></i></a>
            <a href="#"><i class="fa fa-instagram"></i></a>
        </div>
    </div>
    <!-- Offcanvas Menu End -->
    @{
        Html.RenderPartial("_SearchForm");
    }
    <!-- Header Section Begin -->
    <header class="header fixed-top">
        <div class="container-fluid set-bg" data-setbg="@Url.Content("~/img/menu-bg.jpg")">
            <div class="row">
                <div class="col-lg-3">
                    <nav class="header__top header__menu">
                        <ul class="main-menu">
                            <li>@Html.ActionLink("Home", "", "Home")</li>
                            <li class="visually-hidden">
                                <a href="#">Buy</a>
                                <ul class="dropdown shadow rounded">
                                    <li>@Html.ActionLink("All", "All", "Inventory")</li>
                                    <li>@Html.ActionLink("Cars", "Cars", "Inventory")</li>
                                    <li>@Html.ActionLink("Trucks", "Trucks", "Inventory")</li>
                                    <li>@Html.ActionLink("Minivans", "Minivans", "Inventory")</li>
                                    <li>@Html.ActionLink("SUVs", "SUVs", "Inventory")</li>
                                    <li>@Html.ActionLink("Hybrids", "Hybrids", "Inventory")</li>
                                    <li>@Html.ActionLink("Electrics", "Electrics", "Inventory")</li>
                                    <li>@Html.ActionLink("Commercials", "Commercials", "Inventory")</li>
                                </ul>
                            </li>
                            <li>@Html.ActionLink("Blog", "Blog", "Home")</li>
                            <li>
                                <a href="#">About us</a>
                                <ul class="dropdown shadow rounded">
                                    <li>@Html.ActionLink("Contact us", "Contact", "Home")</li>
                                    <li>@Html.ActionLink("Our staff", "Staff", "Home")</li>
                                </ul>
                            </li>
                            <li>
                                <a data-bs-toggle="modal" data-bs-target="#filtersModal" title="Click to ivoke the search dialog.">
                                    <i class="bi bi-search"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <a class="col-lg-5" data-bs-toggle="modal" data-bs-target="#filtersModal"  title="Click to ivoke the search dialog.">
                </a>
                <div class="col-lg-4">
                    <div class="header__top__right">
                        <div class="header__top__phone">
                            <i class="fa fa-clock-o"></i>
                            <span>Week day: 08:00 am to 18:00 pm</span>
                        </div>
                        <div class="header__top__phone">
                            <i class="fa fa-phone"></i>
                            <span>(513) 912-4574</span>
                        </div>
                        <div class="header__top__social">
                            <a href="https://www.facebook.com/GTXAutoGroup"><i class="fa fa-facebook"></i></a>
                            <a href="https://www.twitter.com/GTXAutoGroup"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-google"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            @{ Html.RenderPartial("_CategoryFilter"); }
            <div class="canvas__open">
                <span class="fa fa-bars"></span>
            </div>
        </div>
    </header>
    <!-- Header Section End -->
    <div class="body-content">
        @RenderBody()
    </div>
    <!-- Footer Section Begin -->
    <footer class="set-bg fixed-bottom" data-setbg="@Url.Content("~/img/layout-bg.jpg")">
        <div class="row">
            <div class="col-lg-12 text-white text-center">
                <a href="https://www.gtxagroup.com" target="_blank">
                    <i class="fa fa-clock-o"></i>
                    <h7>
                        <span>Copyright &copy; @DateTime.Now.Year All rights reserved | made by</span>
                        <span class="col-1">GTX</span>
                    </h7>
                </a>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->

    @Scripts.Render("~/scripts/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
