<script src="@Url.Content("~/Scripts/jquery/jquery.mask.js")" type="text/javascript"></script>

<form class="needs-validation" novalidate>
    <div class="form-floating mb-2">
        <input type="text" class="form-control" id="firstName" placeholder="First Name" required>
        <label for="firstName">First Name</label>
    </div>

    <div class="form-floating mb-2">
        <input type="text" class="form-control" id="lastName" placeholder="Last Name" required>
        <label for="lasttName">Last Name</label>
    </div>

    <div class="form-floating mb-2">
        <input type="email" class="form-control" id="email" placeholder="Email Address" required pattern = @Extensions.RegexPattern.EMAIL>
        <label for="firstName">Email Address</label>
    </div>

    <div class="form-floating mb-2">
        <input type="tel" class="form-control" id="phone" placeholder="Phone" required data-mask="(000) 000-0000" data-mask-clearifnotmatch="true">
        <label for="phone">Phone</label>
    </div>

    <div class="form-floating">
        <textarea class="form-control" placeholder="Leave a comment here" id="comments" style="height: 100px" required></textarea>
        <label for="comments">Comments</label>
    </div>

    <input class="btn btn-primary shadow float-end mt-5" type="submit" value="Submit">
</form>

<script>
    (function () {
        var forms = $(".needs-validation")
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener("submit", function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add("was-validated")
                }, false)
            }
        )
    })()
</script>