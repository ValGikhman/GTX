@using Services;
<div id="detailsCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @foreach (Image image in Model.VehicleImages) {
            string imagePath = $"/GTXImages/Inventory/{image.Stock.Trim()}/{image.Name}";
            <div class="carousel-item">
                <img src="@imagePath" class="shadow d-block mx-auto" alt="@imagePath">
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#detailsCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#detailsCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<script>
    $(function () {
        var firstItem = $(".carousel-item").first().addClass("active");
    })
</script>
